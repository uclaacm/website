{
    "extends": [ "stylelint-config-recommended", "stylelint-config-sass-guidelines" ],
    "plugins": [
      "stylelint-scss"
    ],
    "ignoreFiles": ["dist/*", "node_modules/*"],
    "rules": {
      "at-rule-no-unknown": null,
      "scss/at-rule-no-unknown": true,
      "color-hex-case": "upper"
    }
  }